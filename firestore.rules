rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function incomingData() {
      return request.resource.data;
    }
    function isUserAuthenticated(userID) {
      return request.auth.uid == userID;
    }

    match /users/{userID} {
      allow create, update, delete: if isUserAuthenticated(userID);
    }

    match /posts/{postID} {
      // articleのauthorと書き込みリクエストした認証ユーザーが一致していれば許可
      allow write: isUserAuthenticated(request.resource.data.authorID);
    }
    
    match /posts/{postID} {
      allow create: if isUserAuthenticated(incomingData().authorID)
                    && ...;
      allow update: if isUserAuthenticated(incomingData().authorID)
                    && ...;
    }
  }
}